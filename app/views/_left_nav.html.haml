.menu

  %ul
    - main_pages.each do |page|
      %li
        = link_to page.title, refinery.url_for(page.url)
        - children = page.children
        - if children.length > 0
          %ul
            -children.each do |sub|
              - if sub.in_menu?
                %li
                  = link_to sub.title, refinery.url_for(sub.url)


